{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "erasableSyntaxOnly": true,
    "strictPropertyInitialization": true,
    "types": ["bun-types"]
  },
  "include": ["vite.config.ts", "tailwind.config.mjs", ".eslintrc.mjs"]
}
